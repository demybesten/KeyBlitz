<Window x:Class="Solution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Solution.ViewModels"
        xmlns:views="clr-namespace:Solution.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="ThreeDBorderWindow">
  <ContentControl Content="{Binding CurrentViewModel}">
      <ContentControl.Resources>
          
          <DataTemplate DataType="{x:Type viewModels:HomeViewModel }">
          <views:HomeView/>
          </DataTemplate>          
          
          <DataTemplate DataType="{x:Type viewModels:NewTestViewModel }">
          <views:NewTestView/>
          </DataTemplate>         
          
          <DataTemplate DataType="{x:Type viewModels:HeaderViewModel }">
          <views:HeaderView/>
          </DataTemplate>   
          
          <DataTemplate DataType="{x:Type viewModels:KBViewModel }">
          <views:KBView/>
          </DataTemplate>
          
        </ContentControl.Resources>
      </ContentControl>
</Window>
