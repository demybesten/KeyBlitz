<Window x:Class="Solution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Solution.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"

        xmlns:views="clr-namespace:Solution.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="ThreeDBorderWindow" WindowState="Maximized">
    <StackPanel>
        <views:HeaderView/>
        <ContentControl Height="750" Content="{Binding  Navigation.CurrentView}"></ContentControl>
    </StackPanel>
</Window>
