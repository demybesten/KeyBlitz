<UserControl x:Class="Solution.Views.NewTestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solution.Views" 
        xmlns:viewmodels="clr-namespace:Solution.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:NewTestViewModel}"
        Height="455" 
        Width="450"
        mc:Ignorable="d" 
        Background="Transparent">
    <Border CornerRadius="25" BorderBrush="Transparent">
        <Grid>
            <Image 
                HorizontalAlignment="Center" 
                Height="454" 
                VerticalAlignment="Center" 
                Width="450"
                Source="temp.png"
            />
            <Label 
                 Content="new test" 
                 HorizontalAlignment="Left" 
                 Margin="23,30,0,0" 
                 VerticalAlignment="Top"
                 FontFamily="Lucida Console"
                 Foreground="White"
                 FontSize="20"
            />
            <Button 
                 Content="x" 
                 HorizontalAlignment="Left" 
                 Margin="416,18,0,0" 
                 VerticalAlignment="Top"
                 Background="Transparent"
                 FontFamily="Lucida Console"
                 Foreground="White"
                 FontSize="20"
                 BorderBrush="Transparent" 
                 RenderTransformOrigin="-0.914,0.486"
            />
            <Label 
                Content="length" 
                HorizontalAlignment="Left" 
                Margin="48,84,0,0" 
                VerticalAlignment="Top"
                FontFamily="Lucida Console"
                Foreground="Gray"
                FontSize="15"
            />
            <Slider 
                x:Name="lengthSlider"
                HorizontalAlignment="Left" 
                Margin="53,114,0,0" 
                VerticalAlignment="Top" 
                Width="140"
                Maximum="200"
                Minimum="20"
                IsSnapToTickEnabled="True"
                TickFrequency="20"
                Value="{Binding TextLength}"
            />
            <Label 
                Content="{Binding TextLength}" 
                HorizontalAlignment="Right" 
                Margin="0,113,397,0" 
                VerticalAlignment="Top"
                Foreground="White"
                FontFamily="Lucida Console" Height="20" Width="51"
                HorizontalContentAlignment="Right" RenderTransformOrigin="0.5,0.5"
                >
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.377"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.243"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Border 
                HorizontalAlignment="Center" 
                Height="169" 
                Margin="0,80,0,0" 
                Background="Black"
                VerticalAlignment="Top" 
                Width="4"
            />
            <Label 
                Content="complexity" 
                HorizontalAlignment="Left" 
                Margin="44,184,0,0" 
                VerticalAlignment="Top"
                FontFamily="Lucida Console"
                Foreground="Gray"
                FontSize="15"
            />
            <ComboBox 
                x:Name="complexityCB"
                HorizontalAlignment="Left" 
                Margin="53,0,0,0" 
                VerticalAlignment="Center" 
                Width="143" 
                Height="30"
                ItemsSource="{Binding ComplexityLevels}"
            />
            <Label 
                Content="language" 
                HorizontalAlignment="Left" 
                Margin="245,84,0,0" 
                VerticalAlignment="Top"
                FontFamily="Lucida Console"
                Foreground="Gray"
                FontSize="15"
            />
            <ComboBox 
                x:Name="languageCN"
                HorizontalAlignment="Left" 
                Margin="256,109,0,0" 
                VerticalAlignment="Top" 
                Width="143" 
                Height="30"
            />
            <Label 
                Content="text type" 
                HorizontalAlignment="Left" 
                Margin="245,184,0,0" 
                VerticalAlignment="Top"
                FontFamily="Lucida Console"
                Foreground="Gray"
                FontSize="15"
            />
            <ComboBox 
                x:Name="textTypeCB"
                HorizontalAlignment="Left" 
                Margin="256,0,0,0" 
                VerticalAlignment="Center" 
                Width="143" 
                Height="30"
            />
            <Label 
                Content="subject (optional)" 
                HorizontalAlignment="Left" 
                Margin="48,262,0,0" 
                VerticalAlignment="Top"
                FontFamily="Lucida Console"
                Foreground="Gray"
                FontSize="15"
            />
            <TextBox 
                x:Name="subjectText"
                HorizontalAlignment="Center" 
                Margin="0,292,0,0" 
                TextWrapping="Wrap"  
                VerticalAlignment="Top" 
                Width="346" Height="76"
            />
            <Button 
                x:Name="cancelTest"
                Content="cancel" 
                HorizontalAlignment="Left" 
                Margin="53,384,0,0" 
                VerticalAlignment="Top"
                FontFamily="Lucida Console"
                Foreground="Gray"
                FontSize="15" Height="30" Width="155"
            />
            <Button 
                x:Name="startTest"
                Content="start" 
                HorizontalAlignment="Left" 
                Margin="245,384,0,0" 
                VerticalAlignment="Top"
                FontFamily="Lucida Console"
                Foreground="Gray"
                FontSize="15" Height="30" Width="155"
            />
        </Grid>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0B2438" Offset="0.0"/>
                <GradientStop Color="#071826" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
    </Border>
</UserControl>
