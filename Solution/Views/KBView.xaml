        <KeyBinding Key="y" Command="{Binding AddCharacterToString}" CommandParameter="y"/>
        <KeyBinding Key="z" Command="{Binding AddCharacterToString}" CommandParameter="z"/>

        <KeyBinding Key="Space" Command="{Binding Spatie}" />


        <KeyBinding Key="Backspace" Command="{Binding RemoveCharacter}" />


    </UserControl.InputBindings>
    <Border CornerRadius="25" BorderBrush="Transparent">
        
        <Grid>
            <Label 
       Content="new tesSt" 
       HorizontalAlignment="Left" 
       Margin="23,30,0,0" 
       VerticalAlignment="Top"
       FontFamily="Lucida Console"
       Foreground="Black"
       FontSize="20"
  />
            <StackPanel>
                <Button Content="Start" Command="{Binding AddBanaanCommand}"/>

                <ListBox ItemsSource="{Binding woorden2}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
             

                </ListBox>
                
                
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
