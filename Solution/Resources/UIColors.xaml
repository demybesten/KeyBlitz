<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Background Colors -->
    <Color x:Key="PrimaryBackgroundColor">#0B2438</Color>
    <Color x:Key="SecondaryBackgroundColor">#071826</Color>
    <Color x:Key="BackgroundColor">#071826</Color>
    <Color x:Key="LoginScreenColor1">#06131e</Color>
    <Color x:Key="LoginScreenColor2">#030b11</Color>
    
    <!-- Font Colors -->
    <SolidColorBrush x:Key="MainTextColor" Color="White"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>
    <SolidColorBrush x:Key="ErrorMessageColor" Color="Red"/>
    
    <!-- Panel Colors -->
    <SolidColorBrush x:Key="PanelBackgroundColor1" Color="#040d16"/>
    <SolidColorBrush x:Key="PanelBackgroundColor2" Color="Black"/>
    
</ResourceDictionary>